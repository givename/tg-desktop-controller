# Токен бота Telegram
TELEGRAM_BOT_TOKEN=your_bot_token_here

# ID пользователя, которому разрешен доступ к боту (необязательно)
AUTHORIZED_USER_ID=your_user_id_here

# Путь для сохранения файлов
STORAGE_PATH=/path/to/storage/folder

# Linux-специфичные настройки пользователя (обязательно при запуске под root)
# ID пользователя для аудио команд и правильных прав файлов (узнать: id -u username)
LINUX_USER_ID=1000

# Имя пользователя для аудио команд и правильных прав файлов
LINUX_USER_NAME=machine 